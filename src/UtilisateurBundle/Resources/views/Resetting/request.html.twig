{# src/UtilisateurBundle/Resources/views/Resetting/request.html.twig #}

{% extends "base.html.twig" %}

{% block menu %}{% endblock menu %}

{% block style %}
    {{parent()}}

    <style>
        #formConnexion{
            width: 30%;
            float:right;
            font-size: 20px;
            box-sizing: border-box;
        }
        #_submit{
            width: 100%;
            background: #2e2d30;
            color:white;
        }
        #formConnexion input{
            width: 95%;
            font-size: 20px;
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #e1e1e1;
            border-radius: 5px;
        }

        #imgAccueil{
            width: 65%;
            float: left;
        }

        #imgAccueil img{
            width: 100%;
        }
    </style>
{% endblock style %}

{% block header %}
    <div id="wrapper-header">
        <div id="main-header" class="object">
            <div class="logo"><a href="{{ path('site_ressource') }}"><img src="{{asset('img/logo-burst.png')}}" alt="logo platz" height="38" width="90"></a></div>
            <div id='user'>
                <a style='color: #666666;' href='{{path('fos_user_registration_register')}}'>Inscription</a>
            </div>
            <div id='user'>
                <a href='{{path('fos_user_security_login')}}'>Connexion</a> 
            </div> 
            <div id="stripes"></div>
        </div>
    </div>
{% endblock header %}

{% block blockPrincipal %}
    <div class="container object">
        <div id="main-container-image">
            <div id="imgAccueil">
                <img src="{{asset('img/img-site.png')}}" alt="" />
            </div>
            <div id="formConnexion">
                <h2>Récupération du mot de passe</h2>

                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                    <div>
                        <label for="username">Login</label>
                        <input type="text" id="username" name="username" required="required" />
                    </div>
                    <div>
                        <input type="submit" value="Envoyer" />
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock blockPrincipal %}
